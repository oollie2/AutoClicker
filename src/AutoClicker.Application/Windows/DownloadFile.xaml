<Window x:Class="AutoClicker.Windows.DownloadFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, FallbackValue=Downloading}" 
        Width="467.988"
        Height="143.194"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid>
        <Label 
            Content="{Binding FileName, FallbackValue=File Name}" 
            Margin="5,19,0,0"  
            HorizontalAlignment="Left"
            Width="auto" 
            Height="29"
            VerticalAlignment="Top">
        </Label>
        <ProgressBar 
            Foreground="Green"
            Value="{Binding ProgressBarValue, FallbackValue=50}"
            Margin="10,50,10,34"
            Cursor="None">
            <ProgressBar.Style>
                <Style>
                    <Style.Setters/>
                </Style>
            </ProgressBar.Style>
        </ProgressBar>
        <Label 
            Content="{Binding DownloadStatus, FallbackValue=0MB / 0MB}"
            HorizontalContentAlignment="Right"
            Width="228"
            Height="29" 
            VerticalAlignment="Top"
            Margin="0,20,5,0"
            HorizontalAlignment="Right">
        </Label>
    </Grid>
</Window>
